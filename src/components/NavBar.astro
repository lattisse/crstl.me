---
const path = Astro.url.pathname;
---

<nav role="navigation">
    <ul class="nav">
        {
            path !== "/" && (
                <li>
                    <a href="/">home</a>
                </li>
            )
        }
        {
            path !== "/blogs/" && (
                <li>
                    <a href="/blogs/">blog</a>
                </li>
            )
        }
    </ul>
</nav>

<style>
    .nav {
        display: flex;
        justify-content: flex-end;
        margin-top: 1rem;
        gap: 1rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .nav a {
        text-decoration: none;
        border-bottom: none;
    }

    .nav a:hover {
        color: skyblue;
    }
</style>
